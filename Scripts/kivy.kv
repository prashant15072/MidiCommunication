#: import Window kivy.core.window.Window

<MainUI>

    ## Top Layout for taking inputs
    GridLayout:
        cols:3
        size: root.width,root.height*0.1
        pos: root.width*.1 , root.height*.85

        Label:
            text: "CSV FilePath"
            text_size: self.size
            halign: 'center'
            valign: 'middle'

        TextInput:
            id : csv_filepath
            multiline:False

        Label:
            text:""

        Label:
            text: "PortName"
            text_size: self.size
            halign: 'center'
            valign: 'middle'

        TextInput:
            id : portname
            multiline:False

        Label:
            text:""



    ## Second Layout to take it the rest of the stuff

    GridLayout:
        cols:2
        size: root.width,root.height*0.75
        pos: 0 , root.height*.05

        ## Selecting CC or Note On Messages
        GridLayout:
            cols:1

            ScrollView:
                BoxLayout:
                    size_hint_y:None
                    height:Window.height*0.7
                    orientation:'vertical'

                    Label:
                        text:"Prashant \n"*20

            FloatLayout:

                Button:
                    text:"CC Messages"
                    size_hint : 0.5,0.3
                    pos_hint : {"x":0,"y":.7}

                Button:
                    text:"NoteOn Messages"
                    size_hint : 0.5,0.3
                    pos_hint : {"x":0.5,"y":.7}

                Label:
                    text:"Enter the Control Number and the Column Name in the following format : \n33 ColumnA\n76 ColumnB"
                    text_size : self.size
                    size_hint : 1,.5
                    pos_hint : {"x":0,"y":.2}


            TextInput:
                multiline:True

        ## Rest of the Properties Here
        FloatLayout:
            Label:
                text:"Delay between Packets :"
                size_hint : 1,.1
                pos_hint : {"x":0,"y":0.9}

            Slider:
                min:1
                max:30
                pos_hint : {"x":0.1,"y":0.85}
                size_hint : .8,.1
                ## on_value:root.new_thickness(*args)

            Label:
                text:"1"
                size_hint : 1,.1
                pos_hint : {"x":0,"y":0.8}


            Label:
                text:"Averaging Rows :"
                size_hint : 1,.1
                pos_hint : {"x":0,"y":0.7}

            Slider:
                min:1
                max:30
                pos_hint : {"x":0.1,"y":0.65}
                size_hint : .8,.1
                ## on_value:root.new_thickness(*args)

            Label:
                text:"1"
                size_hint : 1,.1
                pos_hint : {"x":0,"y":0.6}

            Label:
                text:"Interpolation"
                size_hint : .6,.1
                pos_hint : {"x":0,"y":0.4}

            Switch:
                size_hint : .4,.1
                pos_hint : {"x":0.4,"y":0.4}
                on_active: root.InterpolationSwitch(self, self.active)

            Slider:
                min:1
                max:1000
                pos_hint : {"x":0.1,"y":.33}
                size_hint : .8,.1
                ## on_value:root.new_thickness(*args)

            Label:
                text:"1"
                size_hint : 1,.1
                pos_hint : {"x":0,"y":0.28}

            Button:
                text:"Start"
                size_hint : 0.4,0.15
                pos_hint : {"x":0.1,"y":0.03}

            Button:
                text:"Stop"
                size_hint : 0.4,0.15
                pos_hint : {"x":0.55,"y":0.03}